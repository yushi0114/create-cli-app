{
  "name": "yushi-starter-cli",
  "version": "1.1.2",
  "description": "YuShi Starter 使用 TypeScript 开发，快速创建中后台项目",
  "private": false,
  "main": "./lib/index.js",
  "bin": {
    "ys-starter": "./bin/yushi-starter-cli.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev:comment": "启动开发环境",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "eslint:comment": "使用 ESLint 检查并自动修复 src 目录下所有扩展名为 .ts 的文件",
    "eslint": "eslint --fix src --ext .ts --max-warnings=0",
    "prettier:comment": "自动格式化 src 目录下的所有 .ts 文件",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "commit:comment": "引导设置规范化的提交信息",
    "commit": "git add . && cz",
    "build:comment": "构建",
    "build": "npm run eslint && npm run prettier && rimraf -rf lib && tsc --build",
    "release:comment": "自动生成changelog",
    "commit:release": "npm run commit && release-it --ci --only-version",
    "release": "release-it --ci --only-version"
  },
  "keywords": [
    "yushi-starter-cli",
    "ys-starter",
    "typescript",
    "cli",
    "typescript 脚手架",
    "脚手架"
  ],
  "author": {
    "name": "yushi0114",
    "email": "2224070723@qq.com",
    "url": "https://github.com/yushi0114"
  },
  "files": [
    "package.json",
    "README.md",
    "lib"
  ],
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.4.3",
    "@commitlint/config-conventional": "^17.4.3",
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/node": "^18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "cz-conventional-changelog": "^3.3.0",
    "czg": "^1.6.1",
    "eslint": "^8.34.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "release-it": "^15.6.0",
    "rimraf": "^4.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "types": {
        "feat": {
          "description": "一个新功能",
          "title": "Features"
        },
        "fix": {
          "description": "一个bug",
          "title": "Bug Fixes"
        },
        "docs": {
          "description": "文档增删改",
          "title": "Documentation"
        },
        "style": {
          "description": "样式修改(空白、格式、缺少分号等)",
          "title": "Styles"
        },
        "refactor": {
          "description": "既不修复bug也不添加新功能的更改",
          "title": "Code Refactoring"
        },
        "perf": {
          "description": "性能优化",
          "title": "Performance Improvements"
        },
        "test": {
          "description": "增加测试",
          "title": "Tests"
        },
        "build": {
          "description": "影响构建系统或外部依赖项的更改(示例范围:gulp、broccoli、npm)",
          "title": "Builds"
        },
        "ci": {
          "description": "对CI配置文件和脚本的更改(示例范围:Travis, Circle, BrowserStack, SauceLabs)",
          "title": "Continuous Integrations"
        },
        "chore": {
          "description": "除src目录或测试文件以外的修改",
          "title": "Chores"
        },
        "revert": {
          "description": "回退历史版本",
          "title": "Reverts"
        },
        "conflict": {
          "description": "修改冲突",
          "title": "Conflict"
        },
        "font": {
          "description": "字体文件更新",
          "title": "Fonts"
        },
        "delete": {
          "description": "删除文件",
          "title": "Delete Files"
        },
        "stash": {
          "description": "暂存文件",
          "title": "Stash Files"
        }
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run eslint",
      "npm run prettier"
    ]
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "clear-console": "^1.1.0",
    "commander": "^6.2.0",
    "download-git-repo": "^3.0.2",
    "fast-glob": "^3.2.11",
    "fs-extra": "^11.1.1",
    "inquirer": "^7.3.3",
    "ora": "^6.1.2",
    "shelljs": "^0.8.5"
  }
}
